root = true

[*]
charset = "utf-8"
end_of_line = "lf"
indent_style = "space"
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 4
indent_style = "tab"
tab_width = 4

[*.json{,c}]
indent_size = 2
tab_width = 2

[*.{md}]
indent_size = 2
tab_width = 2

[*.go]
indent_size = 4
indent_style = "tab"
tab_width = 4

[*.rs]
indent_size = 4
indent_style = "space"
tab_width = 4

[*.y{,a}ml]
indent_size = 2
tab_width = 2

[Makefile]
indent_size = 4
indent_style = "tab"
tab_width = 4
